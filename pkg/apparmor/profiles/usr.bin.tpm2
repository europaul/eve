#include <tunables/global>

profile tpm2 /usr/bin/tpm2 {
    #include <abstractions/base>

    # allow necessary access for operations
    /usr/bin/tpm2           rm,
    /home/{,*,**}           rw,

    # allow access to tpm device
    /dev/tpm0               rw,
    /dev/tpmrm0             rw,
}
